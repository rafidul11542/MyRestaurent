<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back1"
    tools:context=".FastFood">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ABCBF6F0"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:textColor="#2B93BC"
            android:textStyle="bold"
            android:fontFamily="cursive"
            android:textSize="@dimen/_25sdp"
            android:text="Fast Food Menu"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:layout_width="@dimen/_65sdp"
                android:layout_height="@dimen/_150sdp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_5sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:background="@drawable/burger2"
                android:onClick="burger"
                android:text="Burger"
                android:gravity="bottom"
                android:textAlignment="center"
                tools:ignore="RtlCompat" />

            <ImageButton
                android:layout_width="@dimen/_65sdp"
                android:layout_height="@dimen/_150sdp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_5sdp"
                android:background="@drawable/pizza"
                android:onClick="pizza"
                android:text="Pizza"
                android:gravity="bottom"
                android:textAlignment="center"
                tools:ignore="RtlCompat"/>

        </LinearLayout>

        <FrameLayout
            android:id="@+id/frame1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:layout_width="@dimen/_65sdp"
                android:layout_height="@dimen/_150sdp"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_5sdp"
                android:onClick="sndwich"
                android:background="@drawable/sandwich"
                android:layout_weight="1"
                android:gravity="bottom"
                android:text="Sandwitch"
                android:textAlignment="center"
                tools:ignore="RtlCompat" />

            <ImageButton
                android:layout_width="@dimen/_65sdp"
                android:layout_height="@dimen/_150sdp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_5sdp"
                android:background="@drawable/chicken"
                android:onClick="chicken"
                android:text="Chicken"
                android:gravity="bottom"
                android:textAlignment="center"
                tools:ignore="RtlCompat"/>

        </LinearLayout>

        <FrameLayout
            android:id="@+id/frame2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:layout_width="@dimen/_65sdp"
                android:layout_height="@dimen/_150sdp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_5sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:background="@drawable/soup"
                android:text="Soup"
                android:onClick="sup"
                android:gravity="bottom"
                android:textAlignment="center"
                tools:ignore="RtlCompat" />

            <ImageButton
                android:layout_width="@dimen/_65sdp"
                android:layout_height="@dimen/_150sdp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_5sdp"
                android:background="@drawable/steak"
                android:text="Steak"
                android:onClick="stek"
                android:gravity="bottom"
                android:textAlignment="center"
                tools:ignore="RtlCompat"/>

        </LinearLayout>

        <FrameLayout
            android:id="@+id/frame3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:backgroundTint="#63757171"
            android:onClick="goHome"
            android:layout_marginLeft="@dimen/_10sdp"
            android:text="Go to Home"/>

    </LinearLayout>

</ScrollView>